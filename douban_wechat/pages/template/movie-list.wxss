.display {
  height: 100%;
}

.display .item {
  display: flex;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
}

.display .item .poster {
  width: 128rpx;
  height: 168rpx;
  margin-right: 20rpx;
}

.display .item .meta {
  flex: 1;
}

.display .item .meta .title,
.display .item .meta .sub-title {
  display: block;
  margin-bottom: 15rpx;
}

.display .item .meta .title {
  font-size: 32rpx;
}

.display .item .meta .sub-title {
  font-size: 22rpx;
  color: #c0c0c0;
}

.display .item .meta .artists {
  font-size: 24rpx;
  color: #999;
}

.display .item .rating text {
  display: inline-block;
  width: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  background-color: rgba(247, 76, 49, 0.8);
  color: #fff;
  padding: 10rpx;
  border-radius: 20rpx;
}

.display .tips {
  font-size: 28rpx;
  text-align: center;
  padding: 50rpx;
  color: #ccc;
}

.display .tips image,
.display .tips text {
  vertical-align: middle;
}

.display .tips image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
